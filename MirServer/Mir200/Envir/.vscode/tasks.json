{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Save Copy GB2312",
			"type": "shell",
			"command": "iconv -f UTF-8 -t GB2312 ${file} -o ${workspaceFolder}/backups/${fileBasename}.gb2312",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"reveal": "silent"
			},
			"problemMatcher": []
		},
		{
			"label": "Save Copy UTF-8",
			"type": "shell",
			"command": "cp ${file} ${workspaceFolder}/backups/${fileBasename}.utf8",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"reveal": "silent"
			},
			"problemMatcher": []
		}
	]
}